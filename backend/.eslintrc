{
  "plugins": [
    "prettier",
    "@typescript-eslint"
  ],
  "extends": [
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended",
    "prettier/@typescript-eslint"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "env": {
    "node": true
  },
  "ignorePatterns": [
    "dist/",
    "node_modules/"
  ],
  "rules":{
    "prettier/prettier": [
      "error",
      {
        "endOfLine":"auto"
      }
    ]
  }
}
